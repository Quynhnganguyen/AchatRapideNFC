<%= form_for [:admin, @context, @vendeur] do |f| %>

  <div class="form-group">
    <%= f.label :name %>
  	<%= f.text_field :name %>
    
    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %>

  </div>
 
  <%= f.submit class: "btn btn-primary" %>
<% end %>