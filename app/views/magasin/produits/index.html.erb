

<h1>Les produits de magasin <%= @vendeur.magasin.try(:nom_magasin) %></h1>
<a><%= link_to "Nouveau Produit", new_magasin_magasin_produit_path(@vendeur) %></a>
<table class="table table-bordered">
  <thead>
    <tr>
      <th >Nom</th>
      <th >Prix</th>
      <th >Type</th>
      <th >Source</th>
      <th >Nombre</th>
      <th >Activit√©</th>
    </tr>
  </thead>
  <tbody>
    <% @produits.each do |p| %>
      <tr>
        <td><%= p.nom_produit %></td>
        <td><%= p.prix %></td>
        <td><%= p.type_de_produit.try(:type_produit) %></td>
        <td><%= p.source.try(:pays) %></td>
        <td><%= p.nombre %></td>
        <td>
        	<li class = "icon-edit">
        		<%= link_to " Edit", edit_magasin_magasin_produit_path(p.magasin_id, p)%>
        	</li> &nbsp;
        	<li class = "icon-trash">
        		<%= link_to " Delete", magasin_magasin_produit_path(p.magasin_id, p), :method => 'delete'%>
        	</li>&nbsp;
          <li class = "icon-eye-open">
            <%= link_to " Show", magasin_magasin_produit_path(p.magasin_id, p), :method => 'get'%>
          </li>
    	</td>
      </tr>
    <% end %>
  </tbody>
</table>