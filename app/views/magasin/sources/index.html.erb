
<h1>Les sources de produit de magasin <%= @vendeur.magasin.try(:nom_magasin) %></h1>
<a><%= link_to "Nouvelle source de produit", new_magasin_magasin_source_path(@vendeur) %></a>
<table class="table table-bordered">
  <thead>
    <tr>
      <th >Nom du source</th>
      <th >Nombre de produits</th>
      <th >Activit√©</th>
    </tr>
  </thead>
  <tbody>
    <% @sources.each do |s| %>
      <tr>
        <td><%= s.pays %></td>
        <td><%= s.produit.count %></td>
        <td>
        	<li class = "icon-edit">
        		<%= link_to " Edit", edit_magasin_magasin_source_path(s.magasin_id,s)%>
        	</li> &nbsp; &nbsp; &nbsp;
        	<li class = "icon-trash">
        		<%= link_to " Delete", magasin_magasin_source_path(s.magasin_id,s), :method => 'delete'%>
        	</li>
    	</td>
      </tr>
    <% end %>
  </tbody>
</table>